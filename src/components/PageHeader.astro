---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-12">
    {subtitle && (
        <span class="inline-block px-3 py-1 mb-4 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-500 dark:text-slate-400 text-xs font-bold uppercase tracking-wider">
            {subtitle}
        </span>
    )}
    <h1 class="text-4xl md:text-5xl font-serif font-bold text-slate-900 dark:text-white leading-tight">
        {title}
    </h1>
    <div class="h-1 w-20 bg-blue-600 dark:bg-blue-500 mt-6 rounded-full"></div>
</div>
