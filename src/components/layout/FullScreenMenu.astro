---
import LanguageSwitcher from '../LanguageSwitcher.astro';
import { defaultLang, useTranslations, type Lang } from '../../i18n/index';
import { getLocalizedPath } from '../../i18n/utils';

interface Props {
    currentPath: string;
    lang?: Lang;
}

const { currentPath, lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const navItems = [
    { href: getLocalizedPath('/', lang), label: t('nav.home'), number: '01' },
    { href: getLocalizedPath('/blog', lang), label: t('nav.blog'), number: '02' },
    { href: getLocalizedPath('/publications', lang), label: t('nav.research'), number: '03' },
    { href: getLocalizedPath('/cv', lang), label: t('nav.experience'), number: '04' },
    { href: getLocalizedPath('/contact', lang), label: t('nav.contact'), number: '05' },
];

const socialLinks = [
    { href: 'https://github.com/jonaswilinski', label: 'GitHub', icon: 'github' },
    { href: 'https://linkedin.com/in/jonaswilinski', label: 'LinkedIn', icon: 'linkedin' },
];

const isActive = (href: string) => {
    // Normalize paths for comparison
    const normalizedCurrent = currentPath.replace(/\/$/, '');
    const normalizedHref = href.replace(/\/$/, '');

    if (normalizedHref === `/${lang}` || normalizedHref === `/${lang}/`) {
        return normalizedCurrent === `/${lang}` || normalizedCurrent === `/${lang}/`;
    }
    return normalizedCurrent.startsWith(normalizedHref);
};
---

<div
    id="menu-overlay"
    class="menu-overlay fixed inset-0 z-40 bg-white dark:bg-neutral-900 flex flex-col justify-center px-8 md:px-16 lg:px-24"
>
    <!-- Navigation Links -->
    <nav class="flex flex-col gap-2 md:gap-4">
        {navItems.map((item, index) => (
            <a
                href={item.href}
                class:list={[
                    'group flex items-baseline gap-4 md:gap-8 py-2 transition-colors duration-300',
                    isActive(item.href)
                        ? 'text-accent'
                        : 'text-neutral-400 hover:text-neutral-900 dark:hover:text-white'
                ]}
                style={`--stagger-index: ${index}`}
            >
                <span class="font-mono text-sm md:text-base opacity-50 group-hover:opacity-100 transition-opacity">
                    {item.number}
                </span>
                <span class="font-display text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight">
                    {item.label}
                </span>
                {isActive(item.href) && (
                    <span class="hidden md:inline-block w-3 h-3 rounded-full bg-accent animate-pulse"></span>
                )}
            </a>
        ))}
    </nav>

    <!-- Bottom Section -->
    <div class="absolute bottom-8 left-8 right-8 md:left-16 md:right-16 lg:left-24 lg:right-24 flex flex-col md:flex-row items-start md:items-end justify-between gap-6">
        <!-- Language Switcher (Mobile) -->
        <div class="md:hidden">
            <LanguageSwitcher lang={lang} />
        </div>

        <!-- Social Links -->
        <div class="flex items-center gap-6">
            {socialLinks.map((link) => (
                <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-neutral-500 hover:text-accent transition-colors"
                    aria-label={link.label}
                >
                    {link.icon === 'github' && (
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                        </svg>
                    )}
                    {link.icon === 'linkedin' && (
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                    )}
                </a>
            ))}
        </div>

        <!-- Current Time -->
        <div class="text-neutral-500 text-sm">
            <span class="font-mono">Hamburg, Germany</span>
            <span class="mx-2">â€¢</span>
            <span id="current-time" class="font-mono">--:--</span>
        </div>
    </div>
</div>

<script>
    const updateTime = () => {
        const timeEl = document.getElementById('current-time');
        if (timeEl) {
            const now = new Date();
            timeEl.textContent = now.toLocaleTimeString('de-DE', {
                hour: '2-digit',
                minute: '2-digit',
                timeZone: 'Europe/Berlin'
            });
        }
    };

    // Update immediately and then every minute
    updateTime();
    setInterval(updateTime, 60000);

    // Re-run after page transitions
    document.addEventListener('astro:page-load', updateTime);
</script>
