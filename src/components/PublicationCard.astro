---
import Badge from './ui/Badge.astro';
import { defaultLang, type Lang } from '../i18n/index';
import { getLocalizedPath } from '../i18n/utils';

interface Props {
    title: string;
    authors: string[];
    venue: string;
    year: number;
    link?: string;
    pdf?: string;
    slug: string;
    lang?: Lang;
}

const { title, authors, venue, year, link, pdf, slug, lang = defaultLang } = Astro.props;
---

<article class="group relative p-6 md:p-8 rounded-2xl bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 hover:border-accent/50 hover:shadow-xl hover:shadow-accent/5 transition-all duration-300">
    <!-- Top Row: Venue & Year -->
    <div class="flex items-center justify-between mb-4">
        <Badge variant="accent" size="sm">
            {venue}
        </Badge>
        <span class="text-sm font-mono text-neutral-500 dark:text-neutral-400">
            {year}
        </span>
    </div>

    <!-- Title -->
    <h3 class="font-display font-bold text-xl md:text-2xl text-neutral-900 dark:text-white mb-3 group-hover:text-accent transition-colors leading-tight">
        <a href={getLocalizedPath(`/publications/${slug.replace(/\.md$/, '')}`, lang)} class="before:absolute before:inset-0">
            {title}
        </a>
    </h3>

    <!-- Authors -->
    <p class="text-neutral-600 dark:text-neutral-400 mb-4">
        {authors.join(', ')}
    </p>

    <!-- Actions -->
    <div class="flex items-center gap-4">
        {pdf && (
            <a
                href={pdf}
                target="_blank"
                rel="noopener noreferrer"
                class="relative z-10 inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-neutral-700 dark:text-neutral-300 bg-neutral-100 dark:bg-neutral-800 rounded-full hover:bg-accent hover:text-white transition-all"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                PDF
            </a>
        )}
        {link && (
            <div class="relative z-10 inline-flex items-center gap-2 text-sm font-medium text-neutral-500 dark:text-neutral-400 hover:text-accent transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                <a href={link} target="_blank" rel="noopener noreferrer" class="hover:underline">
                    View
                </a>
            </div>
        )}
    </div>
</article>
