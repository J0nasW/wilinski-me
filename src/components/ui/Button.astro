---
interface Props {
    variant?: 'primary' | 'secondary' | 'ghost' | 'outline';
    size?: 'sm' | 'md' | 'lg';
    href?: string;
    class?: string;
    type?: 'button' | 'submit' | 'reset';
    disabled?: boolean;
    external?: boolean;
}

const {
    variant = 'primary',
    size = 'md',
    href,
    class: className = '',
    type = 'button',
    disabled = false,
    external = false,
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium transition-all duration-300 ease-out-expo rounded-full focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

const variants = {
    primary: 'bg-accent text-white hover:bg-accent-600 active:scale-[0.98]',
    secondary: 'bg-neutral-900 dark:bg-white text-white dark:text-neutral-900 hover:bg-neutral-800 dark:hover:bg-neutral-100 active:scale-[0.98]',
    ghost: 'bg-transparent text-neutral-900 dark:text-white hover:bg-neutral-100 dark:hover:bg-neutral-800',
    outline: 'bg-transparent border-2 border-neutral-200 dark:border-neutral-700 text-neutral-900 dark:text-white hover:border-accent hover:text-accent',
};

const sizes = {
    sm: 'px-4 py-2 text-sm gap-1.5',
    md: 'px-6 py-3 text-base gap-2',
    lg: 'px-8 py-4 text-lg gap-2.5',
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;

const Element = href ? 'a' : 'button';
---

{href ? (
    <a
        href={href}
        class={classes}
        target={external ? '_blank' : undefined}
        rel={external ? 'noopener noreferrer' : undefined}
    >
        <slot />
    </a>
) : (
    <button
        type={type}
        class={classes}
        disabled={disabled}
    >
        <slot />
    </button>
)}
