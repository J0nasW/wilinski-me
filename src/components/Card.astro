---
interface Props {
	title: string;
	description?: string;
	image?: string;
	href?: string;
    target?: string;
    tags?: string[];
}

const { title, description, image, href, target = "_self", tags } = Astro.props;
---

<a href={href} target={target} class="group block h-full">
    <article class="h-full relative overflow-hidden rounded-2xl bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
        {image && (
            <div class="aspect-video overflow-hidden">
                <img 
                    src={image} 
                    alt={title} 
                    class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                />
            </div>
        )}
        <div class="p-6 flex flex-col h-full">
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {title}
            </h3>
            {description && (
                <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed mb-4 flex-grow">
                    {description}
                </p>
            )}
            {tags && (
                <div class="flex flex-wrap gap-2 mt-auto">
                    {tags.map(tag => (
                        <span class="px-2 py-1 text-xs font-semibold bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 rounded-md">
                            {tag}
                        </span>
                    ))}
                </div>
            )}
        </div>
    </article>
</a>
