---
import SocialIcons from './ui/SocialIcons.astro';
import { defaultLang, useTranslations, type Lang } from '../i18n/index';
import { getLocalizedPath } from '../i18n/utils';

interface Props {
    lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();

const footerLinks = [
    { href: getLocalizedPath('/blog', lang), label: t('nav.blog') },
    { href: getLocalizedPath('/publications', lang), label: t('nav.research') },
    { href: getLocalizedPath('/cv', lang), label: 'CV' },
    { href: getLocalizedPath('/contact', lang), label: t('nav.contact') },
    { href: getLocalizedPath('/impressum', lang), label: 'Impressum' },
];
---

<footer class="border-t border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900">
    <div class="max-w-6xl mx-auto px-6 md:px-8 py-12 md:py-16">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
            <!-- Brand Column -->
            <div class="lg:col-span-1">
                <a href={getLocalizedPath('/', lang)} class="inline-block font-display font-bold text-2xl text-neutral-900 dark:text-white hover:text-accent transition-colors">
                    JW
                </a>
                <p class="mt-4 text-sm text-neutral-600 dark:text-neutral-400 max-w-xs">
                    {t('footer.description')}
                </p>
            </div>

            <!-- Links Column -->
            <div>
                <h4 class="font-display font-semibold text-sm uppercase tracking-wider text-neutral-500 dark:text-neutral-400 mb-4">
                    {t('footer.links')}
                </h4>
                <ul class="space-y-3">
                    {footerLinks.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                class="text-sm text-neutral-600 dark:text-neutral-400 hover:text-accent transition-colors link-underline"
                            >
                                {link.label}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Social Column -->
            <div>
                <h4 class="font-display font-semibold text-sm uppercase tracking-wider text-neutral-500 dark:text-neutral-400 mb-4">
                    {t('footer.connect')}
                </h4>
                <SocialIcons variant="circle" size="w-5 h-5" gap="gap-3" class="flex-wrap" />
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="mt-12 pt-8 border-t border-neutral-200 dark:border-neutral-800 flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-sm text-neutral-500 dark:text-neutral-400">
                &copy; {currentYear} Jonas Wilinski. {t('footer.copyright')}
            </p>
            <p class="text-sm text-neutral-400 dark:text-neutral-500">
                {t('footer.builtWith')} <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">Astro</a>
            </p>
        </div>
    </div>
</footer>
