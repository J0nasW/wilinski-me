---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import Footer from '../../../components/Footer.astro';
import Badge from '../../../components/ui/Badge.astro';
import ImageLabel from '../../../components/ui/ImageLabel.astro';
import { languages, useTranslations, type Lang } from '../../../i18n/index';
import { formatDate, formatShortDate, getLocalizedPath } from '../../../i18n/utils';

export async function getStaticPaths() {
    const posts = await getCollection('blog');
    const paths = [];

    for (const lang of Object.keys(languages)) {
        for (const post of posts) {
            const pathParts = post.id.split('/');
            let slug: string;

            if (pathParts.length > 1 && (pathParts[0] === 'en' || pathParts[0] === 'de')) {
                if (pathParts[0] !== lang) continue;
                slug = pathParts.slice(1).join('/');
            } else {
                slug = post.id;
            }

            slug = slug.replace(/\.md$/, '');

            paths.push({
                params: { lang, slug },
                props: { post, lang },
            });
        }
    }

    return paths;
}

interface Props {
    post: CollectionEntry<'blog'>;
    lang: Lang;
}

const { post, lang } = Astro.props;
const t = useTranslations(lang);
const { Content } = await render(post);

// Get related posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
    .filter(p => {
        if (p.id === post.id) return false;
        const pathParts = p.id.split('/');
        if (pathParts.length > 1 && (pathParts[0] === 'en' || pathParts[0] === 'de')) {
            return pathParts[0] === lang;
        }
        return true;
    })
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 2);

// Calculate reading time
const wordCount = post.body?.split(/\s+/).length || 0;
const readingTime = Math.ceil(wordCount / 200);

function getCleanSlug(id: string): string {
    const parts = id.split('/');
    let slug: string;
    if (parts.length > 1 && (parts[0] === 'en' || parts[0] === 'de')) {
        slug = parts.slice(1).join('/');
    } else {
        slug = id;
    }
    return slug.replace(/\.md$/, '');
}
---

<Layout title={`${post.data.title} | Jonas Wilinski`} description={post.data.description} image={post.data.heroImage} type="article" lang={lang}>
    <!-- Article JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": post.data.title,
        "description": post.data.description,
        "image": post.data.heroImage ? new URL(post.data.heroImage, "https://wilinski.me").href : undefined,
        "datePublished": post.data.pubDate.toISOString(),
        "dateModified": (post.data.updatedDate || post.data.pubDate).toISOString(),
        "author": {
            "@type": "Person",
            "name": "Jonas Wilinski",
            "url": "https://wilinski.me"
        }
    })} />

    <!-- BreadcrumbList JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://wilinski.me/${lang}` },
            { "@type": "ListItem", "position": 2, "name": "Blog", "item": `https://wilinski.me/${lang}/blog` },
            { "@type": "ListItem", "position": 3, "name": post.data.title }
        ]
    })} />

    <!-- Scroll Indicator - Right Side -->
    <div id="scroll-indicator" class="fixed right-6 top-1/2 -translate-y-1/2 z-40 hidden lg:flex flex-col items-center gap-3 opacity-0 transition-opacity duration-300">
        <div class="relative h-32 w-1 bg-neutral-200 dark:bg-neutral-700 rounded-full overflow-hidden">
            <div id="scroll-progress-bar" class="absolute bottom-0 left-0 right-0 bg-accent rounded-full transition-all duration-150" style="height: 0%"></div>
        </div>
        <span id="scroll-percentage" class="font-mono text-xs text-neutral-500 dark:text-neutral-400 tabular-nums">0%</span>
    </div>

    <div>
        <!-- Hero Header Section -->
        <header class="relative min-h-[70vh] md:min-h-[80vh] flex items-end overflow-hidden">
            <!-- Background Gradient Orbs -->
            <div class="absolute inset-0 pointer-events-none overflow-hidden">
                <div class="absolute -top-1/4 -right-1/4 w-[800px] h-[800px] rounded-full bg-accent/20 blur-[120px] animate-gradient-drift"></div>
                <div class="absolute -bottom-1/4 -left-1/4 w-[600px] h-[600px] rounded-full bg-cyan-500/15 blur-[100px] animate-gradient-drift-alt"></div>
            </div>

            <!-- Background Pattern -->
            <div class="absolute inset-0 bg-dots opacity-30"></div>

            <!-- Hero Image (Full Bleed) -->
            {post.data.heroImage && (
                <div class="absolute inset-0">
                    <img
                        src={post.data.heroImage}
                        alt=""
                        class="w-full h-full object-cover opacity-20 dark:opacity-15"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-white via-white/80 to-transparent dark:from-neutral-900 dark:via-neutral-900/80"></div>
                    {/* Image Attribution Label */}
                    {post.data.heroImageAttribution && post.data.heroImageAttribution !== 'none' && (
                        <ImageLabel
                            type={post.data.heroImageAttribution}
                            label={post.data.heroImageCredit}
                            href={post.data.heroImageLink}
                            model={post.data.heroImageModel}
                            position="bottom-right"
                        />
                    )}
                </div>
            )}

            <div class="relative z-10 w-full px-6 md:px-8 pt-28 md:pt-32 pb-16 md:pb-24">
                <div class="max-w-6xl mx-auto">
                    <!-- Back Button - Floating -->
                    <a
                        href={getLocalizedPath('/blog', lang)}
                        class="inline-flex items-center gap-2 mb-8 px-4 py-2 rounded-full bg-white/80 dark:bg-neutral-800/80 backdrop-blur-sm border border-neutral-200 dark:border-neutral-700 text-sm text-neutral-600 dark:text-neutral-400 hover:text-accent hover:border-accent/50 transition-all group"
                    >
                        <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                        {t('blog.backToBlog')}
                    </a>

                    <!-- Meta Row -->
                    <div class="flex flex-wrap items-center gap-4 mb-6" data-reveal>
                        <time datetime={post.data.pubDate.toISOString()} class="font-mono text-sm text-accent font-medium">
                            {formatDate(post.data.pubDate, lang)}
                        </time>
                        <span class="w-12 h-px bg-neutral-300 dark:bg-neutral-700"></span>
                        <span class="text-sm text-neutral-500 dark:text-neutral-400 font-medium">
                            {readingTime} {t('blog.minRead')}
                        </span>
                    </div>

                    <!-- Title - Oversized & Bold -->
                    <h1 class="font-display font-black text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-neutral-900 dark:text-white mb-8 leading-[1.1] tracking-tight max-w-5xl" data-reveal>
                        {post.data.title}
                    </h1>

                    <!-- Tags -->
                    {post.data.tags && post.data.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2" data-reveal>
                            {post.data.tags.map(tag => (
                                <span class="px-4 py-1.5 rounded-full text-sm font-medium bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 border border-neutral-200 dark:border-neutral-700">
                                    #{tag}
                                </span>
                            ))}
                        </div>
                    )}
                </div>
            </div>

            </header>

        <!-- Article Content Section -->
        <div class="relative">
            <article class="px-6 md:px-12 lg:px-8 py-20 md:py-32">
                <div class="max-w-4xl mx-auto">
                    <!-- Blog Content with Enhanced Typography -->
                    <div class="blog-content prose prose-xl md:prose-2xl dark:prose-invert max-w-none">
                        <Content />
                    </div>
                </div>
            </article>
        </div>

        <!-- Updated Date -->
        {post.data.updatedDate && (
            <div class="px-6 md:px-12 lg:px-8 pb-8">
                <div class="max-w-4xl mx-auto">
                    <p class="text-sm text-neutral-500 dark:text-neutral-400 italic flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {t('blog.lastUpdated')}{' '}
                        <time datetime={post.data.updatedDate.toISOString()} class="font-medium">
                            {formatDate(post.data.updatedDate, lang)}
                        </time>
                    </p>
                </div>
            </div>
        )}

        <!-- Share & Actions Section -->
        <section class="px-6 md:px-12 lg:px-8 py-16">
            <div class="max-w-4xl mx-auto">
                <div class="relative p-8 md:p-12 rounded-3xl bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-800/50 dark:to-neutral-900/50 border border-neutral-200 dark:border-neutral-700 overflow-hidden">
                    <!-- Decorative -->
