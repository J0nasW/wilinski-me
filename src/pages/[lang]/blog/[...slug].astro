    .blog-content {
        font-size: 1.1875rem;
        line-height: 2;
        color: rgb(82 82 82);
    }

    @media (min-width: 768px) {
        .blog-content {
            font-size: 1.3125rem;
        }
    }

    .dark .blog-content {
        color: rgb(163 163 163);
    }

    /* ==================== Paragraphs ==================== */
    .blog-content p {
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .blog-content p {
            margin-bottom: 2.5rem;
        }
    }

    /* ==================== Headings ==================== */
    .blog-content h1,
    .blog-content h2,
    .blog-content h3,
    .blog-content h4,
    .blog-content h5,
    .blog-content h6 {
        font-family: var(--font-display);
