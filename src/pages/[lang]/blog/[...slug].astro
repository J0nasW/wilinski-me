<script>
    function initBlogPost() {
        // Scroll indicator with percentage
        const scrollIndicator = document.getElementById('scroll-indicator');
        const scrollProgressBar = document.getElementById('scroll-progress-bar');
        const scrollPercentage = document.getElementById('scroll-percentage');

        if (scrollIndicator && scrollProgressBar && scrollPercentage) {
            const updateProgress = () => {
                const scrollTop = window.scrollY;
                const docHeight = document.documentElement.scrollHeight - window.innerHeight;
                const progress = Math.min((scrollTop / docHeight) * 100, 100);

                scrollProgressBar.style.height = `${progress}%`;
                scrollPercentage.textContent = `${Math.round(progress)}%`;

                // Show/hide indicator based on scroll
                if (scrollTop > 200) {
                    scrollIndicator.style.opacity = '1';
                } else {
                    scrollIndicator.style.opacity = '0';
                }
            };

            window.addEventListener('scroll', updateProgress, { passive: true });
            updateProgress();
        }

        // Copy link button
        const copyBtn = document.getElementById('copy-link-btn');
        if (copyBtn) {
            copyBtn.addEventListener('click', async () => {
                const url = copyBtn.dataset.url || window.location.href;
                try {
                    await navigator.clipboard.writeText(url);
                    const copyIcon = copyBtn.querySelector('.copy-icon');
                    const checkIcon = copyBtn.querySelector('.check-icon');
                    if (copyIcon && checkIcon) {
                        copyIcon.classList.add('hidden');
                        checkIcon.classList.remove('hidden');
                        setTimeout(() => {
                            copyIcon.classList.remove('hidden');
                            checkIcon.classList.add('hidden');
                        }, 2000);
                    }
                } catch (err) {
                    console.error('Failed to copy:', err);
                }
            });
        }
    }

    initBlogPost();
    document.addEventListener('astro:page-load', initBlogPost);
</script>
