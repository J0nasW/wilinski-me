                    <div class="relative z-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6">
                        <div>
                            <h3 class="font-display font-bold text-xl text-neutral-900 dark:text-white mb-2">
                                {t('blog.shareArticle')}
                            </h3>
                            <p class="text-neutral-600 dark:text-neutral-400 text-sm">
                                {lang === 'de' ? 'Teilen Sie diesen Artikel mit Ihrem Netzwerk' : 'Spread the word with your network'}
                            </p>
                        </div>

                        <div class="flex items-center gap-3">
                            <a
                                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center justify-center w-12 h-12 rounded-2xl bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-600 dark:text-neutral-400 hover:bg-neutral-900 dark:hover:bg-white hover:text-white dark:hover:text-neutral-900 hover:border-neutral-900 dark:hover:border-white transition-all shadow-sm hover:shadow-lg"
                                aria-label="Share on X"
                            >
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                                </svg>
                            </a>
                            <a
                                href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(post.data.title)}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center justify-center w-12 h-12 rounded-2xl bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-600 dark:text-neutral-400 hover:bg-[#0A66C2] hover:text-white hover:border-[#0A66C2] transition-all shadow-sm hover:shadow-lg"
                                aria-label="Share on LinkedIn"
                            >
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                            </a>
                            <button
                                id="copy-link-btn"
                                class="flex items-center justify-center w-12 h-12 rounded-2xl bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 text-neutral-600 dark:text-neutral-400 hover:bg-accent hover:text-white hover:border-accent transition-all shadow-sm hover:shadow-lg"
                                aria-label="Copy link"
                                data-url={Astro.url.href}
                            >
                                <svg class="w-5 h-5 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                                </svg>
                                <svg class="w-5 h-5 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Related Posts -->
        {relatedPosts.length > 0 && (
            <section class="relative px-6 md:px-8 py-20 md:py-28 bg-neutral-950 text-white overflow-hidden">
                <!-- Background Elements -->
                <div class="absolute inset-0 bg-dots opacity-10"></div>
                <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-[120px]"></div>

                <div class="relative z-10 max-w-6xl mx-auto">
                    <div class="text-center mb-12">
                        <span class="text-accent font-mono text-sm font-medium tracking-wider uppercase">
                            {t('blog.continueReading')}
                        </span>
                        <h2 class="font-display font-bold text-3xl md:text-4xl mt-3">
                            {lang === 'de' ? 'Mehr entdecken' : 'Explore More'}
                        </h2>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6 md:gap-8">
                        {relatedPosts.map((relatedPost, index) => (
                            <a
                                href={getLocalizedPath(`/blog/${getCleanSlug(relatedPost.id)}/`, lang)}
                                class="group relative flex flex-col p-8 rounded-3xl bg-white/5 border border-white/10 hover:bg-white/10 hover:border-accent/50 transition-all duration-500"
                                data-reveal
                                style={`--stagger-index: ${index}`}
                            >
                                <!-- Hover Glow -->
                                <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-accent/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                                <div class="relative z-10">
                                    <div class="flex items-center gap-3 text-sm text-neutral-400 mb-4">
                                        <time datetime={relatedPost.data.pubDate.toISOString()} class="font-mono">
                                            {formatShortDate(relatedPost.data.pubDate, lang)}
                                        </time>
                                        {relatedPost.data.tags && relatedPost.data.tags[0] && (
                                            <>
                                                <span class="text-neutral-600">â€¢</span>
                                                <span>#{relatedPost.data.tags[0]}</span>
                                            </>
                                        )}
                                    </div>

                                    <h3 class="font-display font-bold text-xl md:text-2xl text-white group-hover:text-accent transition-colors mb-3">
                                        {relatedPost.data.title}
                                    </h3>

                                    <p class="text-neutral-400 line-clamp-2 mb-6">
                                        {relatedPost.data.description}
                                    </p>

                                    <div class="flex items-center gap-2 text-accent font-medium text-sm group-hover:gap-4 transition-all">
                                        {lang === 'de' ? 'Weiterlesen' : 'Read more'}
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                        </svg>
                                    </div>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </section>
        )}
    </div>

    <Footer lang={lang} />
</Layout>

<style is:global>
