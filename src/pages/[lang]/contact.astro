---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import SocialIcons from "../../components/ui/SocialIcons.astro";
import Button from "../../components/ui/Button.astro";
import Badge from "../../components/ui/Badge.astro";
import { languages, useTranslations, type Lang } from "../../i18n/index";

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang },
    }));
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);
---

<Layout title={`${t("contact.label")} | Jonas Wilinski`} lang={lang}>
    <!-- BreadcrumbList JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            { "@type": "ListItem", "position": 1, "name": "Home", "item": `https://wilinski.me/${lang}` },
            { "@type": "ListItem", "position": 2, "name": t("contact.label") }
        ]
    })} />

    <main class="pt-24 pb-16">
        <!-- Header -->
        <section class="px-6 md:px-8 mb-12 md:mb-16">
            <div class="max-w-4xl mx-auto text-center">
                <div data-reveal>
                    <span
                        class="text-xs font-bold uppercase tracking-wider text-accent mb-2 block"
                    >
                        {t("contact.label")}
                    </span>
                    <h1
                        class="font-display font-bold text-4xl md:text-5xl lg:text-6xl text-neutral-900 dark:text-white mb-4"
                    >
                        {t("contact.title")}
                    </h1>
                    <p
                        class="text-lg text-neutral-600 dark:text-neutral-400 max-w-xl mx-auto"
                    >
                        {t("contact.description")}
                    </p>
                </div>
            </div>
        </section>

        <!-- Contact Options -->
        <section class="px-6 md:px-8 mb-16">
            <div class="max-w-4xl mx-auto">
                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Email Card -->
                    <div
                        class="p-8 rounded-3xl bg-gradient-to-br from-accent to-cyan-500 text-white"
                        data-reveal
                        style="--stagger-index: 0;"
                    >
                        <div class="flex items-center gap-3 mb-6">
                            <div
                                class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </div>
                            <span
                                class="text-sm font-bold uppercase tracking-wider text-white/80"
                            >
                                {t("contact.email")}
                            </span>
                        </div>
                        <a
                            href="#"
                            class="block font-display font-bold text-2xl md:text-3xl break-all hover:underline protected-email"
                            data-user="jonas"
                            data-domain="wilinski.me"
                        >
                            <span class="email-placeholder"
                                >{t("contact.clickToReveal")}</span
                            >
                        </a>
                        <p class="mt-4 text-white/70">
                            {t("contact.emailDescription")}
                        </p>
                    </div>

                    <!-- Location Card -->
                    <div
                        class="p-8 rounded-3xl bg-neutral-100 dark:bg-neutral-800/50 border border-neutral-200 dark:border-neutral-700"
                        data-reveal
                        style="--stagger-index: 1;"
                    >
                        <div class="flex items-center gap-3 mb-6">
                            <div
                                class="w-12 h-12 rounded-full bg-neutral-200 dark:bg-neutral-700 flex items-center justify-center"
                            >
                                <svg
                                    class="w-6 h-6 text-neutral-600 dark:text-neutral-400"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                            </div>
                            <span
                                class="text-sm font-bold uppercase tracking-wider text-neutral-500 dark:text-neutral-400"
                            >
                                {t("contact.location")}
                            </span>
                        </div>
                        <p
                            class="font-display font-bold text-2xl text-neutral-900 dark:text-white mb-2"
                        >
                            {t("featured.locationCity")}
                        </p>
                        <div
                            class="flex items-center gap-2 text-neutral-500 dark:text-neutral-400"
                        >
                            <div
                                class="relative flex items-center justify-center"
                            >
                                <span
                                    class="absolute h-4 w-4 rounded-full bg-emerald-500/40 animate-pulse-ring"
                                ></span>
                                <span
                                    class="absolute h-3 w-3 rounded-full bg-emerald-500/20 animate-pulse-ring-delayed"
                                ></span>
                                <span
                                    class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500 shadow-lg shadow-emerald-500/50"
                                ></span>
                            </div>
                            <span>{t("contact.availableRemote")}</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Social Links -->
        <section class="px-6 md:px-8 mb-16">
            <div class="max-w-4xl mx-auto">
                <h2
                    class="font-display font-bold text-xl text-neutral-900 dark:text-white mb-6 text-center"
                    data-reveal
                >
                    {t("contact.findMeOn")}
                </h2>

                <div data-reveal>
                    <SocialIcons variant="pill" size="w-6 h-6" gap="gap-4" class="flex-wrap justify-center" />
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="px-6 md:px-8">
            <div class="max-w-4xl mx-auto">
                <div
                    class="relative p-8 md:p-12 rounded-3xl bg-neutral-900 dark:bg-neutral-950 text-center overflow-hidden"
                    data-reveal
                >
                    <!-- Decorative -->
                    <div
                        class="absolute top-0 left-1/2 -translate-x-1/2 w-96 h-96 bg-accent rounded-full blur-[150px] opacity-20"
                    >
                    </div>

                    <div class="relative z-10">
                        <h3
                            class="font-display font-bold text-2xl md:text-3xl text-white mb-4"
                        >
                            {t("contact.startProject")}
                        </h3>
                        <p class="text-neutral-400 mb-8 max-w-lg mx-auto">
                            {t("contact.startProjectText")}
                        </p>
                        <button
                            type="button"
                            class="protected-email-btn inline-flex items-center gap-2 px-6 py-3 bg-accent text-white rounded-full font-medium hover:bg-accent-600 transition-colors"
                            data-user="jonas"
                            data-domain="wilinski.me"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                            {t("contact.sendMeEmail")}
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer lang={lang} />
</Layout>

<script>
    // Email protection - decode and display emails only via JavaScript
    function decodeEmail(user: string, domain: string): string {
        return `${user}@${domain}`;
    }

    function initEmailProtection() {
        // Handle email links
        document.querySelectorAll(".protected-email").forEach((el) => {
            const element = el as HTMLAnchorElement;
            const user = element.dataset.user;
            const domain = element.dataset.domain;
            if (user && domain) {
                const email = decodeEmail(user, domain);
                element.href = `mailto:${email}`;
                const placeholder = element.querySelector(".email-placeholder");
                if (placeholder) {
                    placeholder.textContent = email;
                }
            }
        });

        // Handle email buttons
        document.querySelectorAll(".protected-email-btn").forEach((el) => {
            const element = el as HTMLButtonElement;
            const user = element.dataset.user;
            const domain = element.dataset.domain;
            if (user && domain) {
                element.addEventListener("click", () => {
                    const email = decodeEmail(user, domain);
                    window.location.href = `mailto:${email}`;
                });
            }
        });
    }

    // Run on initial load
    initEmailProtection();

    // Run on Astro page transitions
    document.addEventListener("astro:page-load", initEmailProtection);
</script>
