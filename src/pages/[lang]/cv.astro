        <section class="px-6 md:px-8 mb-16">
            <div class="max-w-4xl mx-auto">
                <h2 class="font-display font-bold text-2xl text-neutral-900 dark:text-white mb-8 flex items-center gap-3" data-reveal>
                    <span class="flex items-center justify-center w-10 h-10 rounded-full bg-amber-100 dark:bg-amber-900/30">
                        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
