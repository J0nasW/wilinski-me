---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import Badge from "../../components/ui/Badge.astro";
import Button from "../../components/ui/Button.astro";
import { languages, useTranslations, type Lang } from "../../i18n/index";

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang },
    }));
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

// =============================================================================
// LOGO CONFIGURATION
// =============================================================================
// To use a custom image instead of unavatar, replace the URL with a local path:
//   Example: "/images/cv/porsche.jpg" or import an image
// To use unavatar, use the format: "https://unavatar.io/domain.com"
// =============================================================================
const logos = {
    // Work Experience
    reforge: "https://unavatar.io/reforgelabs.com",
    cargofaces: "/public/assets/img/cargofaces.png",
    ecomap: "/public/assets/img/ecomap_pin_500px.png",
    tuhh: "https://unavatar.io/tuhh.de",
    porsche: "https://unavatar.io/porsche.com",
    uniKiel: "/public/assets/img/cau.png",

    // Education
    gymnasium: "/public/assets/img/steingy.jpg",

    // Internships
    filipp: "/public/assets/img/hf_logo_lq.jpg",
};
---

<Layout title={`${t("cv.title")} - Jonas Wilinski`} lang={lang}>
    <main class="pt-24 pb-16">
        <!-- Header -->
        <section class="px-6 md:px-8 mb-12 md:mb-16">
            <div class="max-w-4xl mx-auto">
                <div data-reveal>
                    <span
                        class="text-xs font-bold uppercase tracking-wider text-accent mb-2 block"
                    >
                        {t("cv.label")}
                    </span>
                    <h1
                        class="font-display font-bold text-4xl md:text-5xl lg:text-6xl text-neutral-900 dark:text-white mb-4"
                    >
                        {t("cv.title")}
                    </h1>
                    <p
                        class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl"
                    >
                        {t("cv.description")}
                    </p>
                </div>
            </div>
        </section>

        <!-- Two Feature Cards -->
        <section class="px-6 md:px-8 mb-16">
            <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-6">
                <!-- PhD Candidate Card -->
                <div data-reveal style="--stagger-index: 0;">
                    <div
                        class="relative h-full p-8 rounded-3xl bg-gradient-to-br from-violet-950 via-purple-900 to-indigo-900 overflow-hidden"
                    >
                        <!-- Decorative Elements -->
                        <div
                            class="absolute -top-12 -right-12 w-64 h-64 bg-violet-500 rounded-full blur-[100px] opacity-30 animate-gradient-drift"
                        >
                        </div>
                        <div
                            class="absolute -bottom-8 -left-8 w-48 h-48 bg-indigo-400 rounded-full blur-[80px] opacity-20 animate-gradient-drift-alt"
                        >
                        </div>
                        <!-- Grid Pattern -->
                        <div class="absolute inset-0 bg-grid opacity-10"></div>

                        <div class="relative z-10 h-full flex flex-col">
                            <Badge variant="accent" size="sm" class="mb-4 self-start">
                                PhD Candidate
                            </Badge>
                            <h2
                                class="font-display font-bold text-xl md:text-2xl text-white mb-3"
                            >
                                Institute of Entrepreneurship
                            </h2>
                            <p class="text-violet-200 mb-4 text-sm">
                                Hamburg University of Technology (TUHH)
                            </p>
                            <p class="text-violet-100/80 text-sm flex-1">
                                Researching the diffusion of AI concepts across
                                the global scientific landscape using NLP and
                                LLMs.
                            </p>
                            <Button
                                href="https://www.startupengineer.io/"
                                variant="secondary"
                                size="sm"
                                external
                                class="bg-violet-100/10 hover:bg-violet-100/20 text-violet-100 border-violet-400/30 mt-4"
                            >
                                {t("cv.visitInstitute")}
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </Button>
                        </div>
                    </div>
                </div>

                <!-- Reforge Labs Card -->
                <div data-reveal style="--stagger-index: 1;">
                    <div
                        class="relative h-full p-8 rounded-3xl bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-800 overflow-hidden"
                    >
                        <!-- Decorative Elements -->
                        <div
                            class="absolute -top-12 -right-12 w-64 h-64 bg-accent rounded-full blur-[100px] opacity-25 animate-gradient-drift"
                        >
                        </div>
                        <div
                            class="absolute -bottom-8 -left-8 w-48 h-48 bg-cyan-500 rounded-full blur-[80px] opacity-15 animate-gradient-drift-alt"
                        >
                        </div>
                        <!-- Dots Pattern -->
                        <div class="absolute inset-0 bg-dots opacity-20"></div>

                        <div class="relative z-10 h-full flex flex-col">
                            <Badge variant="accent" size="sm" class="mb-4 self-start">
                                {t("cv.currentlyBuilding")}
                            </Badge>
